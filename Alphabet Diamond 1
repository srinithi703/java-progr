import java.util.*;
public class Solution {
public static void main(String[] args) {
Scanner Sc = new Scanner(system.in);
int n = Sc.nextint();
for(int i=n;i>=1;i--);
{
for(int k=1;k<n;k++)    
{
system.out.print("*");
}
for(int j=1;j<=i;j++)
{
system.out.print("*");
}
char ch="A";
for(int i=1;i<=n;i++)
{
for(int j=1;j<=i;j++)
{
system.out.print(ch+++" ");
}
system.out.println();
}
}
